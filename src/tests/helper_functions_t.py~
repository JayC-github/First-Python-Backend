'''
A file for helper functions written for test cases
'''


'''
Helper functions: Check if a channel exists in a list

channelList is the variable "channels" returned from channel_list or channel_listall
'''
def does_channel_exist_in_list(channelList, channel_id, name):
    for channel in channelList:
        if (channel_id == channel["channel_id"] and name == channel["name"]):
            return True
            
    return False
            
def does_member_exist_in_list(memberList, u_id, name_first, name_last):
    for member in memberList:
        if (u_id == member["u_id"] and name_first == member["name_first"] and name_last == member["name_last"]):
            return True
            
    return False
    
    
    
# A function that generates number of strings as messages
def generate_messages(number):
    count = 0
    listOfMsg = []
    while count < number:
        
        messageInfo = {}
        messageInfo["message"] = f"This is the {count} message"
        messageInfo["message_id"] = -1
        listOfMsg.append(messageInfo)
        count += 1
    listOfMsg = listOfMsg[::-1]
        
    return listOfMsg
    
    

if __name__ == "__main__":
    print (generate_messages(100))

